<%# Add styling bootstrap head and footer %>
<% include partials/header %>

<!-- Jumbotron -->
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is FINE...</h1>
            <p>Welcome to Find Internal Nighht Event in your Town.</p>
            <p>
                <a class="btn btn-info btn-lg" href="/allevents/new">Add New Event In Your Town!</a>
                <a class="btn btn-warning" href="">Find Event in Town</a>
            </p>
        </div>
    </header>

    <!-- List of Cards -->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% allEvents.forEach((singlEvent)=> { %>
        <div class="col-md-3 col-sm-6">
            <div class="card style=" width: 14rem;">
                <h7 class="card-title card-header"><%= singlEvent.genre %></h7>
                <img src="<%= singlEvent.image %>" class="card-img-top img-thumbnail" alt="cover">
                <div class="card-body">
                    <h5 class="card-title caption"><%= singlEvent.name %></h5>
                    <p class="card-text"><%= singlEvent.description.substring(0,100) %>...</p>
                    
                    <p class="card-text"><small class="text-muted"><%= singlEvent.created.toDateString() %></small></p>
                    <a href="/allevents/<%= singlEvent._id %>" class="badge badge-primary">More Info</a>
                    <br>
                    <a href="" class="badge badge-light">Loc:<%= singlEvent.location %></a>
                    <a class="badge badge-info">Date: <%= singlEvent.date.toDateString() %></a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
        
    <hr>
    <a href="/">Back Home</a>
</div>


<% include partials/footer %>